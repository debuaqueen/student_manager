<%- include('../partials/header') %>
<h2>Edit Student: <%= student.name %></h2>
<form method="POST" action="/students/<%= student._id %>?_method=PUT">
  <div>
    <label>Student ID:</label>
    <input type="text" value="<%= student.studentId %>" disabled />
  </div>
  <div>
    <label>Name:</label>
    <input type="text" value="<%= student.name %>" disabled />
  </div>
  <div>
    <label>GPA:</label>
    <input type="number" step="0.1" name="gpa" value="<%= student.gpa %>" required />
  </div>
  <div>
    <label>Postgraduate?</label><br>
    <input type="radio" name="isPG" value="yes" <%= student.isPG ? 'checked' : '' %> /> Yes<br>
    <input type="radio" name="isPG" value="no" <%= !student.isPG ? 'checked' : '' %> /> No
  </div>
  <br>
  <button type="submit">Update Student</button>
</form>
<a href="/students">‚Üê Back to List</a>
<%- include('../partials/footer') %>
