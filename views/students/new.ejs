<%- include('../partials/header') %>
<h2>Add New Student</h2>
<form method="POST" action="/students">
  <div>
    <label>Student ID:</label>
    <input type="number" name="studentId" placeholder="e.g. 101" required />
  </div>
  <div>
    <label>Full Name:</label>
    <input type="text" name="name" placeholder="e.g. Alice Wong" required />
  </div>
  <div>
    <label>GPA:</label>
    <input type="number" step="0.1" name="gpa" placeholder="e.g. 3.8" required />
  </div>
  <div>
    <label>Postgraduate?</label><br>
    <input type="radio" name="isPG" value="yes" id="pg-yes" />
    <label for="pg-yes">Yes</label><br>
    <input type="radio" name="isPG" value="no" id="pg-no" checked />
    <label for="pg-no">No</label>
  </div>
  <br>
  <button type="submit">Add Student</button>
</form>
<a href="/students">‚Üê Back to List</a>
